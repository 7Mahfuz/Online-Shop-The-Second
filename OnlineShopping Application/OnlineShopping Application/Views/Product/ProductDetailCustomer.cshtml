@model IEnumerable<OnlineShopping_Application.Models.Product>

@{
    ViewBag.Title = "ProductDetailCustomer";
}
<br/><br/>
<div class="container body-content">
    <div class="row">
@foreach (var item in Model)
{
    
    <div class="col-md-2">
        <div class="thumbnail">
            <img src="@Url.Content(item.ImageUrl)" width="100" height="100" class="img-rounded img-responsive" />
            Name : @item.Name <br/>
            Price : @item.Price<br/>
            @Html.ActionLink("Details", "Details", new { @id = item.Id,  },new { @class = "btn btn-default btn-success" })
        </div>
    </div>
}
    </div>
</div>


