@model IEnumerable<OnlineShopping_Application.Models.OrderListViewModel>

@{
    ViewBag.Title = "Index";
}
<br/><br/>
<div class="container body-content">
    <div class="row">
        <div class="col-md-3">@Html.ActionLink("See Delivered Orders", "IndexDone")<br/>
 </div>
            
           <br/>    
        <div class="col-md-8">
            <table class="table table-bordered table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SL)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PaymentId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SL)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PaymentId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { paymentId = item.PaymentId, what = "UnDone" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>